package Demo;

import java.net.MalformedURLException;
import java.net.URI;
import java.net.URL;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.remote.DesiredCapabilities;

import io.appium.java_client.android.AndroidDriver;

public class AutomateCalc {

	public static void main(String[] args) throws MalformedURLException, InterruptedException {
		// TODO Auto-generated method stub

		//Gather Desired capabilities
		//dumpsys window displays | grep -E 'mCurrentFocus'
		//  mCurrentFocus=Window{20aff6a u0 com.oneplus.calculator/com.oneplus.calculator.Calculator}

		//com.oneplus.calculator:id/digit_5
		//com.oneplus.calculator:id/digit_6


		DesiredCapabilities capabilities = new DesiredCapabilities();

		capabilities.setCapability("deviceName","OnePlus AC2001");
		capabilities.setCapability("platformname", "Android");     
		capabilities.setCapability("automationName","uiautomator2");
		capabilities.setCapability("platformversion", "12");
		capabilities.setCapability("appPackage", "com.oneplus.calculator");
		capabilities.setCapability("appActivity", "com.oneplus.calculator.Calculator");


		URL url = URI.create("http://127.0.0.1:4723/").toURL();

		AndroidDriver driver = new AndroidDriver(url, capabilities);

		WebElement no5=   driver.findElement(By.id("com.oneplus.calculator:id/digit_5"));
		no5.click();

		WebElement plus=   driver.findElement(By.id("com.oneplus.calculator:id/op_add"));
		plus.click();

		WebElement no6=   driver.findElement(By.id("com.oneplus.calculator:id/digit_6"));
		no6.click();

		WebElement equal=   driver.findElement(By.id("com.oneplus.calculator:id/eq"));
		equal.click();

		
		WebElement res=   driver.findElement(By.id("com.oneplus.calculator:id/result"));
		String result = res.getText();
		
		if (result.equals("11"))
		{
			System.out.println("pass");
		}
		else
			System.out.println("fail");

			
		

Thread.sleep(5000);
System.out.println("Application Started");
driver.quit();//CLOSE SESSION
	}

}
