package Demo;

import java.net.MalformedURLException;
import java.net.URI;
import java.net.URL;

import org.openqa.selenium.By;
import org.openqa.selenium.remote.DesiredCapabilities;

import io.appium.java_client.android.AndroidDriver;

public class CheckboxAndRadioBtn {

	public static void main(String[] args) throws MalformedURLException, InterruptedException {
		// TODO Auto-generated method stub
//io.appium.android.apis/io.appium.android.apis.ApiDemos
		DesiredCapabilities capabilities = new DesiredCapabilities();
		
		   capabilities.setCapability("deviceName","OnePlus AC2001");
	        capabilities.setCapability("platformname", "Android");     
	        capabilities.setCapability("automationName","uiautomator2");
	        capabilities.setCapability("app", "C:\\Users\\ASUS\\Desktop\\apkfiles\\ApiDemos-debug.apk");
	        capabilities.setCapability("platformversion", "12");//
	         

	     //   capabilities.setCapability("appPackage","io.appium.android.apis");
	       //capabilities.setCapability("appActivity", "io.appium.android.apis.ApiDemos");
	     

	        URL url = URI.create("http://127.0.0.1:4723/").toURL();
	        
	        AndroidDriver driver = new AndroidDriver(url, capabilities);
	       
	        //click on continue button
	       
		    //   driver.findElement(By.id("com.android.permissioncontroller:id/continue_button")).click();
		    
		       //views
		       driver.findElements(By.id("android:id/text1")).get(11).click();        //com.android.permissioncontroller:id/continue_button
	    
		       //control
		       driver.findElements(By.id("android:id/text1")).get(4).click();        //com.android.permissioncontroller:id/continue_button
	        
		       //light theme
		       driver.findElements(By.id("android:id/text1")).get(0).click();        //com.android.permissioncontroller:id/continue_button
	        
		       //text box
		       driver.findElement(By.id("io.appium.android.apis:id/edit")).sendKeys("Prachi Gupta");        //com.android.permissioncontroller:id/continue_button

		       //io.appium.android.apis:id/check2
		       driver.findElement(By.id("io.appium.android.apis:id/check2")).click();        //com.android.permissioncontroller:id/continue_button

		       
		       //io.appium.android.apis:id/radio2
		       driver.findElement(By.id("io.appium.android.apis:id/radio2")).click();        //com.android.permissioncontroller:id/continue_button

		    Thread.sleep(5000);
	        System.out.println("Application Started");
	        driver.quit();//CLOSE SESSION
	}

}
